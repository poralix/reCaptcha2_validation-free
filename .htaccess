<IfModule mod_php5.c>
    php_flag opcache.enable Off
</IfModule>

<IfModule mod_php7.c>
    php_flag opcache.enable Off
</IfModule>

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-s
RewriteRule ^(.*)$ index.php [L]
